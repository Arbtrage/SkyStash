generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Auth {
  id        String   @id @default(cuid())
  email     String
  password  String
  createdAt DateTime
  updatedAt DateTime
  User      User?
}

model User {
  id        String   @id @default(cuid())
  name      String
  AuthId    String   @unique
  FileId    String   @unique
  createdAt DateTime
  updatedAt DateTime
  File      File[]
  Auth      Auth     @relation(fields: [AuthId], references: [id], onDelete: Cascade)
}

model File {
  id        String   @id @default(cuid())
  name      String
  UserId    String
  path      String
  createdAt DateTime
  updatedAt DateTime
  User      User     @relation(fields: [UserId], references: [id])
}
